{
  "name": "@namecard/infra",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "infrastructure": "bin/infrastructure.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "node scripts/run-tests.cjs",
    "cdk": "cdk",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy",
    "diff": "cdk diff",
    "synth": "cdk synth",
    "bootstrap": "cdk bootstrap",
    "deploy:dev": "cdk deploy --context environment=development --all",
    "deploy:staging": "cdk deploy --context environment=staging --all",
    "deploy:prod": "cdk deploy --context environment=production --all",
    "synth:dev": "cdk synth --context environment=development",
    "synth:staging": "cdk synth --context environment=staging",
    "synth:prod": "cdk synth --context environment=production",
    "diff:dev": "cdk diff --context environment=development",
    "diff:staging": "cdk diff --context environment=staging",
    "diff:prod": "cdk diff --context environment=production",
    "destroy:dev": "cdk destroy --context environment=development --all",
    "destroy:staging": "cdk destroy --context environment=staging --all",
    "destroy:prod": "cdk destroy --context environment=production --all",
    "perf:harness": "ts-node scripts/perf-harness.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@types/pg": "^8.15.5",
    "aws-cdk": "2.1023.0",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@aws-sdk/client-rds": "^3.901.0",
    "@aws-sdk/client-secrets-manager": "^3.901.0",
    "@aws-sdk/client-sns": "^3.901.0",
    "aws-cdk-lib": "^2.206.0",
    "constructs": "^10.4.2",
    "pg": "^8.16.3"
  }
}
