{
  "name": "@namecard/unified-api-service",
  "version": "1.0.0",
  "description": "NameCard Unified API Gateway - Lambda Proxy Functions",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "sls offline start --stage local",
    "deploy:staging": "sls deploy --stage staging",
    "deploy:production": "sls deploy --stage production",
    "package": "sls package",
    "remove": "sls remove",
    "logs": "sls logs -f health --tail",
    "invoke": "sls invoke -f health",
    "test": "jest",
    "lint": "eslint *.ts handlers/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@namecard/serverless-shared": "file:../shared",
    "@namecard/shared": "file:../../packages/shared",
    "aws-lambda": "^1.0.7",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^20.11.0",
    "serverless": "^3.38.0",
    "serverless-offline": "^14.4.0",
    "typescript": "^5.3.3",
    "jest": "^30.0.4"
  }
}