{
  "name": "namecard-app",
  "version": "0.1.0",
  "private": true,
  "description": "Business name card scanner and enrichment application",
  "scripts": {
    "build:all": "pnpm -r run build",
    "build:core": "pnpm -r --filter '!@namecard/infra' run build",
    "dev": "pnpm --filter @namecard/web run dev",
    "dev:web": "pnpm --filter @namecard/web run dev",
    "dev:workers": "pnpm --filter @namecard/workers run dev",
    "lint:all": "pnpm -r run lint && pnpm run lint:migrations",
    "lint:migrations": "node scripts/check-migrations.cjs",
    "test:all": "node scripts/run-tests.cjs",
    "test:core": "node scripts/run-tests.cjs --filter '!@namecard/infra'",
    "test:watch": "pnpm -r run test:watch",
    "test:coverage": "pnpm -r run test:coverage",
    "test:e2e": "pnpm run test:e2e:web && pnpm run test:e2e:api",
    "test:e2e:web": "pnpm --filter @namecard/web-e2e run test:smoke",
    "test:e2e:web:cypress": "pnpm exec cypress run",
    "test:e2e:open": "pnpm exec cypress open",
    "test:e2e:dev": "start-server-and-test \"pnpm run dev\" http://localhost:3000 \"pnpm run test:e2e\"",
    "test:e2e:api": "pnpm --filter @namecard/api-e2e run test:dry-run",
    "test:e2e:api:local": "pnpm --filter @namecard/api-e2e run test:local",
    "test:e2e:api:staging": "pnpm --filter @namecard/api-e2e run test:staging",
    "type-check:all": "pnpm --filter @namecard/shared run build && pnpm -r run type-check",
    "ci:quality": "pnpm run lint:all && pnpm run type-check:all && pnpm run test:core && pnpm run build:core",
    "ci:infra-dry-run": "pnpm run migrate:local && pnpm run migrate:validate && node scripts/launch/verify-readiness.cjs plan",
    "launch:verify": "node scripts/launch/verify-readiness.cjs verify",
    "launch:plan": "node scripts/launch/verify-readiness.cjs plan",
    "launch:record": "node scripts/launch/verify-readiness.cjs record",
    "clean": "pnpm -r exec rimraf dist build .next && rm -rf node_modules",
    "build": "pnpm run build:all",
    "lint": "pnpm run lint:all",
    "test": "pnpm run test:all",
    "type-check": "pnpm run type-check:all",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:up": "sh -c 'docker-compose up -d || docker compose up -d'",
    "docker:down": "sh -c 'docker-compose down || docker compose down'",
    "docker:logs": "sh -c 'docker-compose logs -f || docker compose logs -f'",
    "docker:restart": "sh -c 'docker-compose restart || docker compose restart'",
    "docker:clean": "sh -c 'docker-compose down -v --remove-orphans || docker compose down -v --remove-orphans'",
    "db:up": "sh -c 'docker-compose up -d postgres || docker compose up -d postgres'",
    "db:down": "sh -c 'docker-compose stop postgres || docker compose stop postgres'",
    "db:logs": "sh -c 'docker-compose logs -f postgres || docker compose logs -f postgres'",
    "db:seed": "tsx scripts/db-seed.ts",
    "migrate:local": "pnpm --filter @namecard/infra exec tsx migrator/local-runner.ts",
    "migrate:validate": "pnpm --filter @namecard/infra exec tsx migrator/validate-runner.ts",
    "fullstack:up": "node scripts/fullstack-up.mjs",
    "fullstack:logs": "docker-compose logs -f",
    "fullstack:test": "docker-compose up -d && sleep 15 && curl http://localhost:8080/health",
    "frontend:up": "docker-compose up -d frontend",
    "frontend:logs": "docker-compose logs -f frontend",
    "lambda:sandbox": "node scripts/lambda-sandbox.mjs",
    "smoke:local": "node scripts/smoke-local.mjs",
    "onboard:local": "node scripts/onboard-local.mjs",
    "e2e:seed:clear": "node scripts/clear-e2e-seed.mjs",
    "prepare": "husky install || echo 'Husky install failed, continuing...'",
    "postinstall": "pnpm --filter @namecard/shared run prisma:generate"
  },
  "workspaces": [
    "infra",
    "services/*",
    "tests/*"
  ],
  "devDependencies": {
    "@namecard/e2e-shared": "workspace:*",
    "@cypress/webpack-preprocessor": "^6.0.4",
    "@jest/types": "^30.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cypress": "^14.5.1",
    "esbuild": "^0.24.0",
    "esbuild-register": "^3.6.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^8.0.3",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "module-alias": "^2.2.3",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "start-server-and-test": "^2.0.12",
    "tsx": "^4.7.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.4"
}
