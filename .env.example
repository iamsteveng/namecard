# Environment (development, staging, production)
NODE_ENV=development

# Database Configuration (Docker)
DATABASE_URL=postgresql://namecard_user:namecard_password@localhost:5432/namecard_dev
DATABASE_TEST_URL=postgresql://namecard_user:namecard_password@localhost:5433/namecard_test

# Docker Database Credentials
POSTGRES_DB=namecard_dev
POSTGRES_USER=namecard_user
POSTGRES_PASSWORD=namecard_password

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# S3 Configuration
S3_BUCKET_NAME=namecard-images
S3_REGION=us-east-1

# Cognito Configuration
COGNITO_USER_POOL_ID=your_user_pool_id
COGNITO_CLIENT_ID=your_client_id
COGNITO_CLIENT_SECRET=your_client_secret

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://localhost:6379

# External APIs
CLEARBIT_API_KEY=your_clearbit_api_key
NEWS_API_KEY=your_news_api_key
GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_client_secret

# Enrichment Sources Configuration
ENRICHMENT_ENABLED_SOURCES=perplexity

# Perplexity AI Configuration
PERPLEXITY_ENABLED=true
PERPLEXITY_API_KEY=your-perplexity-api-key-here
PERPLEXITY_BASE_URL=https://api.perplexity.ai
PERPLEXITY_RATE_LIMIT_RPM=60
PERPLEXITY_RATE_LIMIT_RPD=1000
PERPLEXITY_TIMEOUT=30000
PERPLEXITY_MAX_RETRIES=2
PERPLEXITY_BACKOFF_MS=3000
PERPLEXITY_WEIGHT=0.9
PERPLEXITY_TRUST_LEVEL=88

# Clearbit Configuration
CLEARBIT_ENABLED=false
CLEARBIT_BASE_URL=https://company-stream.clearbit.com/v2
CLEARBIT_RATE_LIMIT_RPM=100
CLEARBIT_RATE_LIMIT_RPD=1000
CLEARBIT_TIMEOUT=10000
CLEARBIT_MAX_RETRIES=3
CLEARBIT_BACKOFF_MS=1000
CLEARBIT_WEIGHT=1.0
CLEARBIT_TRUST_LEVEL=90

# Enrichment Settings
AUTO_ENRICH_NEW_CARDS=false
ENRICHMENT_BATCH_SIZE=10
ENRICHMENT_MAX_CONCURRENT=5
ENRICHMENT_RETRY_DELAY=300000
ENRICHMENT_CLEANUP_DELAY=86400000
ENRICHMENT_MIN_CONFIDENCE=0.7

# Frontend Configuration
VITE_API_URL=http://localhost:3001
VITE_COGNITO_USER_POOL_ID=your_user_pool_id
VITE_COGNITO_CLIENT_ID=your_client_id

# Server Configuration
PORT=3001
API_PORT=3001
WEB_PORT=3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json