{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["services/shared/*"],
      "@services/*": ["services/*"]
    },
    "allowJs": true,
    "outDir": "./.webpack"
  },
  "include": [
    "local/**/*",
    "services/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist", 
    "build",
    ".webpack",
    "packages/**/*"
  ]
}